<Window x:Class="ImageToWebPConverter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Image to WebP Converter"
        Height="720"
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Image to WebP Converter"
                   FontSize="26"
                   FontWeight="Bold"/>

        <Border Grid.Row="1" Padding="16" Background="#FFF8F8F8" CornerRadius="8" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="來源與輸出" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="來源資料夾" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding InputFolder, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"/>
                    <Button Grid.Column="2"
                            Content="瀏覽..."
                            Width="80"
                            Margin="10,0,0,0"
                            Command="{Binding BrowseInputCommand}"/>

                    <TextBlock Grid.Row="1"
                               Text="輸出資料夾"
                               VerticalAlignment="Center"
                               Margin="0,10,12,0"/>
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Margin="0,10,0,0"
                             Text="{Binding OutputFolder, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"/>
                    <Button Grid.Row="1"
                            Grid.Column="2"
                            Content="瀏覽..."
                            Width="80"
                            Margin="10,10,0,0"
                            Command="{Binding BrowseOutputCommand}"/>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Padding="16" Background="#FFF8F8F8" CornerRadius="8" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="轉換設定" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="品質 (1-100)" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Slider Width="250"
                                    Minimum="1"
                                    Maximum="100"
                                    Value="{Binding Quality, Mode=TwoWay}"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True"/>
                            <TextBlock Text="{Binding Quality}" Width="50" Margin="12,0,0,0" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Column="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="最大寬度" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 Width="80"
                                 Text="{Binding MaxWidthText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="最大高度" VerticalAlignment="Center" Margin="16,0,8,0"/>
                        <TextBox Grid.Column="3"
                                 Width="80"
                                 Text="{Binding MaxHeightText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                        <CheckBox Content="包含子資料夾"
                                  Margin="0,0,20,0"
                                  IsChecked="{Binding IncludeSubfolders}"/>
                        <CheckBox Content="覆寫已存在檔案"
                                  IsChecked="{Binding OverwriteExisting}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="開始轉換"
                    Width="140"
                    Height="36"
                    Command="{Binding StartCommand}"/>
            <Button Content="取消"
                    Width="100"
                    Height="36"
                    Margin="10,0,0,0"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>

        <Border Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="8" Margin="0,12,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="轉換進度" FontWeight="SemiBold"/>
                <ListView Grid.Row="1"
                          Margin="0,8,0,0"
                          ItemsSource="{Binding Items}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="來源檔名" Width="280" DisplayMemberBinding="{Binding InputFileName}"/>
                            <GridViewColumn Header="輸出檔名" Width="280" DisplayMemberBinding="{Binding OutputFileName}"/>
                            <GridViewColumn Header="狀態" Width="120" DisplayMemberBinding="{Binding State}"/>
                            <GridViewColumn Header="訊息" Width="400" DisplayMemberBinding="{Binding Message}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <Border Grid.Row="5" Padding="12" Background="#FFF8F8F8" CornerRadius="8" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="總計" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.Total, TargetNullValue='-'}" FontSize="16"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="成功" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.Converted, TargetNullValue='-'}" FontSize="16"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="略過" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.Skipped, TargetNullValue='-'}" FontSize="16"/>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBlock Text="失敗" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.Failed, TargetNullValue='-'}" FontSize="16"/>
                </StackPanel>
                <StackPanel Grid.Column="4">
                    <TextBlock Text="耗時" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Summary.Duration, StringFormat={}{0:hh\\:mm\\:ss}, TargetNullValue='-'}" FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="6"
                Padding="12"
                Background="#FFFFFFFF"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Text="來源路徑" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding InputFolder}"
                           TextWrapping="Wrap"
                           Margin="0,2,0,8"/>
                <TextBlock Text="輸出路徑" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding OutputFolder}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
